rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    function linkedAccountsDiffOnly() {
      return resource == null
        ? request.resource.data.keys().hasOnly(['linkedAccounts'])
        : request.resource.data.diff(resource.data).affectedKeys().hasOnly(['linkedAccounts']);
    }
    function linkedAccountsExtendsExisting(userId) {
      return resource == null
        || !(resource.data.linkedAccounts is list)
        || (
          request.resource.data.linkedAccounts is list
          && request.resource.data.linkedAccounts.hasAll(resource.data.linkedAccounts)
        );
    }
    function linkedAccountsAugmentation(userId) {
      return request.auth != null
        && request.auth.uid != userId
        && request.resource.data.linkedAccounts is list
        && request.resource.data.linkedAccounts.hasAny([request.auth.uid])
        && linkedAccountsExtendsExisting(userId)
        && linkedAccountsDiffOnly();
    }

    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        (resource.data.linkedAccounts is list && request.auth.uid in resource.data.linkedAccounts)
      );
      allow write: if isOwner(userId) || linkedAccountsAugmentation(userId);
      match /results/{resultId} {
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          (
            exists(/databases/$(database)/documents/users/$(userId)) &&
            get(/databases/$(database)/documents/users/$(userId)).data.linkedAccounts is list &&
            request.auth.uid in get(/databases/$(database)/documents/users/$(userId)).data.linkedAccounts
          )
        );
        allow write: if isOwner(userId);
      }
    }

    match /leaderboards/{dateKey}/entries/{entryId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    match /shareStats/{uid} {
      allow read: if true;
      allow write: if isOwner(uid);
    }

    match /shares/{shareId} {
      allow read: if true;
      allow write: if request.auth != null;
      match /connections/{connectionId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == connectionId;
      }
    }
  }
}
